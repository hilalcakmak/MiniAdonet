@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sağlık Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
        }
        .sidebar {
            width: 220px;
            min-height: 100vh;
            background: #2196F3;
            color: #fff;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
        }
        .sidebar .nav-link {
            color: #fff;
            font-weight: 500;
        }
        .sidebar .nav-link.active,
        .sidebar .nav-link:hover {
            background: rgba(255,255,255,0.11);
            border-radius: .6rem;
        }
        .sidebar .logo {
            font-size: 1.3rem;
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 2.2rem;
            color: #fff;
        }
        .main-content {
            flex-grow: 1;
            min-height: 100vh;
            padding: 2.5rem 2.5rem 1.5rem 2.5rem;
        }
        .userbox {
            background: #e3f2fd;
            padding: .7rem 1.1rem;
            border-radius: 1rem;
        }
        .userbox i {
            font-size: 1.5rem;
            color: #2196F3;
            vertical-align: middle;
        }
        .userbox span {
            font-weight: 500;
        }
        media (max-width: 900px) {
            .sidebar { width: 100px; }
            .sidebar .logo, .sidebar .nav-link span { display: none; }
            .main-content { padding: 1rem; }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column align-items-start p-3">
            <div class="logo mb-4">
                <i class="bi bi-hospital"></i> <span>Klinik Paneli</span>
            </div>
            <ul class="nav flex-column w-100">
                <li class="nav-item mb-2">
                    <a class="nav-link @((Context.Request.Path.Value.Contains("/Doktorlar") ? "active" : ""))" href="/Doktorlar/Index">
                        <i class="bi bi-person-badge"></i> <span>Doktorlar</span>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @((Context.Request.Path.Value.Contains("/Hastalar") ? "active" : ""))" href="/Hastalar/Index">
                        <i class="bi bi-people"></i> <span>Hastalar</span>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link @((Context.Request.Path.Value.Contains("/Randevular") ? "active" : ""))" href="/Randevular/Index">
                        <i class="bi bi-calendar-event"></i> <span>Randevular</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content bg-light">
            <header class="mb-4 d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
                <div class="userbox d-flex align-items-center gap-2">
                    <i class="bi bi-person-circle"></i>
                    <span>Kullanıcı Adı</span>
                </div>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
